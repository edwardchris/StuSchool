<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.les.entity.Tclass" table="TCLASS" schema="STU">
        <id name="cno">
            <column name="CNO" sql-type="varchar2(30)" length="30"/>
        </id>
        <property name="cname">
            <column name="CNAME" sql-type="varchar2(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>