<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.les.entity.Tcourse" table="TCOURSE" schema="STU">
        <id name="kno">
            <column name="KNO" sql-type="varchar2(30)" length="30"/>
        </id>
        <property name="kname">
            <column name="KNAME" sql-type="varchar2(50)" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>